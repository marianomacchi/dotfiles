!
! ~/.Xresources
!

!!! Urxvt settings
! Set terminal type name (sets the TERM environment var)
URxvt*termName: rxvt-unicode-256color
! Set fonts w/ powerline symbols
URxvt*font: xft:Sauce Code Powerline:pixelsize=11.3:style=regular
! Set Background and foreground (font) color
URxvt.background : black
URxvt.foreground : white
! Disable scrollbar (default is true)
URxvt*scrollBar: false
